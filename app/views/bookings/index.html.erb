<div  class="container">
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Booking Date</th>
      <th>Billing Address</th>
    </tr>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.first_name %></td>
        <td><%= booking.last_name %></td>
        <td><%= booking.booking_date %></td>
        <td><%= booking.billing_address %></td>

       	<td><%= link_to "Edit", edit_booking_path(booking) %></td>
        <td><%= link_to "show", booking_path(booking) %></td>
        <td><%= button_to "Destroy", booking, method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <%= button_to 'New Booking', {:controller => "bookings", :action => "new" } , :method=>:get, class:"btn btn-primary" %>

  <% unless @bookings.empty? %>
    <%= will_paginate @bookings %>
  <% end %>
</div>