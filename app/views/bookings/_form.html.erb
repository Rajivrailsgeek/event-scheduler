
<div class="container">
  <%= form_with(model: booking) do |f| %>
    <div class="form-group">
      <label for="first_name">FIRST NAME:</label>
      <%= f.text_field :first_name ,class: "form-control", placeholder: "Enter Your First Name" , id:"first_name" %>
    </div>

    <div class="form-group">
      <label for="last_name">LAST NAME:</label>
      <%= f.text_field :last_name ,class: "form-control", placeholder: "Enter Your Last Name" , id:"last_name" %>
    </div>

    <div class="form-group">
      <label for="booking_date">BOOKING DATE:</label>
      <%= f.date_field :booking_date ,
       data: {
         controller: "flatpickr",
         flatpickr_disable_days_of_week: [5,6], #disables saturdays and sundays
         flatpickr_disable: ["2018-09-25", "2018-09-26"] #disables individual dates
       },class: "form-control", id:"booking_date" %>
    </div>

    <div class="form-group">
      <label for="billing_address">BILLING ADDRESS:</label>
      <%= f.text_field :billing_address ,class: "form-control", placeholder: "Enter Billing Address" , id:"billing_address" %>
    </div>
    <br>
    <%= f.submit 'Submit' ,class:"btn btn-primary" %>
  <% end %>
</div>
